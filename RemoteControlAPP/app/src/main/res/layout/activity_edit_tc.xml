<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditTCActivity">

    <EditText
        android:hint="LibellÃ©"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:id="@+id/txtLibelleE"
        />

    <EditText
        android:hint="Adresse MAC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:id="@+id/txtAdrMACE"
        />


    <Spinner
        android:id="@+id/spinnerProprio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnEditerTC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="Editer " />

        <Button
            android:id="@+id/btnSuppTC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/btnEditerTC"
            android:layout_alignLeft="@id/btnEditerTC"
            android:layout_marginLeft="85dp"
            android:layout_marginRight="20dp"
            android:text="Supprimer" />
        <Button
            android:id="@+id/btnRetourTC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/btnSuppTC"
            android:layout_marginLeft="95dp"
            android:layout_alignLeft="@id/btnSuppTC"
            android:layout_marginRight="20dp"
            android:text="Retour " />
    </RelativeLayout>
</LinearLayout>